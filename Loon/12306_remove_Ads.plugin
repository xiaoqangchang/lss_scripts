#!switch=开屏广告:true,应用内广告:true

[Rule]
DOMAIN, ad.12306.cn, DIRECT

[Script]
# 开屏广告开关
http-request ^https:\/\/ad\.12306\.cn\/ad\/ser\/getAdList$ \
script-path=https://kelee.one/Resource/JavaScript/12306/12306_remove_splashscreen_ads.js, \
requires-body=true, \
enabled=开屏广告, \
tag=移除12306开屏广告

# 应用内广告开关
http-request ^https:\/\/mobile\.12306\.cn\/otsmobile\/app\/mgs\/mgw\.htm$ \
script-path=https://kelee.one/Resource/JavaScript/12306/12306_remove_ads.js, \
enabled=应用内广告, \
tag=移除12306应用内广告

[MitM]
hostname=ad.12306.cn, mobile.12306.cn